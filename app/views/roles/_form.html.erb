<%= form_with(model: role, html: { class: ['form-control', 'form-control-sm'] }) do |form| -%>
  <%- if role.errors.any? -%>
  <div style="color: red">
    <h2><%= t("errors.template.header", model: Role.model_name.human, count: role.errors.count) %></h2>

    <ul>
    <% role.errors.each do |error| %>
      <li><%= error.full_message %></li>
    <%- end -%>
    </ul>
  </div>
  <%- end -%>

  <%- if request.path_info.include?('edit') -%>
  <div>
    <%= form.label :id, style: "display: block" %>
    <div class="ps-2">
      <%= form.number_field :id, class: ['form-control', 'form-control-sm'], disabled: true %>
    </div>
  </div>
  <%- end -%>
  <div>
    <%= form.label :name, style: "display: block" %>
    <div class="ps-2">
      <%= form.text_field :name, class: ['form-control', 'form-control-sm'] %>
    </div>
  </div>
  <%- if request.path_info.include?('edit') %>
  <div>
    <%= form.label :created_at, style: "display: block" %>
    <div class="ps-2">
      <%= form.datetime_field :created_at, class: ['form-control', 'form-control-sm'], disabled: true %>
    </div>
    <%= form.label :updated_at, style: "display: block" %>
    <div class="ps-2">
      <%= form.datetime_field :updated_at, class: ['form-control', 'form-control-sm'], disabled: true %>
    </div>
  </div>
  <%- end -%>
  <div>
    <%= form.submit class: ['btn', 'btn-primary'] %>
  </div>
<% end %>