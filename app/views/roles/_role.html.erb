<div id="<%= dom_id role %>">
  <table class="table table-hover">
    <tr>
      <td>
        <strong>Id:</strong>
      </td>
      <td>
        <%= role.id %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>
          <%= Role.human_attribute_name(:name) %>
        </strong>
      </td>
      <td>
        <%= role.name %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>
          <%= Role.human_attribute_name(:created_at) %>
        </strong>
      </td>
      <td>
        <%= role.created_at %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>
          <%= Role.human_attribute_name(:updated_at) %>
        </strong>
      </td>
      <td>
        <%= role.updated_at %>
      </td>
    </tr>
  </table>
</div>
